{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build current file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-Wall",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build current C++ file"
        },
        {
            "type": "cppbuild",
            "label": "build quan ly nhan vien",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-Wall",
                "${workspaceFolder}\\quan_ly_nhan_vien.cpp",
                "-o",
                "${workspaceFolder}\\quan_ly_nhan_vien.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build quan ly nhan vien"
        }
    ]
}

